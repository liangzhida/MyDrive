<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/biaoti"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_fengmian"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_height="150dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="150dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="6858"
                        android:textSize="18sp"
                        android:id="@+id/tv_xiaoshuoming"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_jieshao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="6858"
                        android:textSize="18sp"
                        android:id="@+id/tv_xiaoshuoming1"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_jieshao1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="6858"
                        android:textSize="18sp"
                        android:id="@+id/tv_xiaoshuoming2"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_jieshao2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>


</LinearLayout>